<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bluetooth App"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtMain"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BT ON/OFF"
        android:layout_below="@+id/txtMain"
        android:id="@+id/btnONOFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="query paired device"
        android:textAllCaps="true"
        android:layout_below="@+id/btnONOFF"
        android:id="@+id/btnQuery" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to a device"
        android:textAllCaps="true"
        android:layout_below="@+id/btnQuery"
        android:id="@+id/btnConnect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take PICture"
        android:textAllCaps="true"
        android:layout_below="@+id/btnConnect"
        android:enabled="false"
        android:id="@+id/btnTakePic" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnTakePic"
        android:id="@+id/showData"/>

</RelativeLayout>